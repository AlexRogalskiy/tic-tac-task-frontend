form {
  display: flex;
  flex-direction: column;
}

#task_list {
  .mat-list-item {
    &:hover {
      background: rgba(0, 0, 0, .04)
    }

    mat-checkbox {
      margin-right: 16px;

      ::ng-deep .mat-checkbox-ripple { // ::ng-deep is deprecated
        display: none;
      }
    }

    #title_column {
      display: flex;
      flex-direction: row;
      align-items: center;
      width: 100%;
      height: 100%;
      cursor: pointer;
    }
  }
}
