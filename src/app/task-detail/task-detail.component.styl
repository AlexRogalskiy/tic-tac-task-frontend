mat-card {
  form {
    display: flex;
    flex-direction: column;
  }

  .mat-card-header {
    a {
      margin-bottom: 8px;
    }

    .mat-card-title {
      margin-top: 10px;
      margin-bottom: 15px;
      margin-left: 8px;
      flex-grow: 1;
    }
  }

  mat-card-content {
    form {
      font-size: 16px;
    }
  }

  .divider-wrapper {
    padding-bottom: 16px;
  }

  .comment-wrapper {
    padding: 8px 0;

    .comment-date-wrapper {
      padding-bottom: 8px;

      .comment-date {
        color: rgba(0, 0, 0, .54);
      }
    }
  }
}
