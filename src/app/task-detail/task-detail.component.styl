mat-card {
  form {
    display: flex;
    flex-direction: column;
  }

  .mat-card-header {
    a {
      margin-bottom: 8px;
    }

    .mat-card-title {
      margin-top: 10px;
      margin-bottom: 15px;
      margin-left: 8px;
      flex-grow: 1;
    }
  }

  .mat-card-content {
    form {
      .deadline-container {
        display: flex;
        flex-direction: column;

        .deadline-form-field-container {
          display: flex;
          flex-direction: row;

          .deadline-time-checkbox {
            padding: 1.1em 0;
            color: rgba(0, 0, 0, 0.54);
            margin-left: 16px;
          }

          .deadline-date-form-field {
            max-width: 160px;
          }

          .deadline-time-form-field {
            max-width: 80px;
            margin-left: 8px;

            ngx-material-timepicker-toggle {
              position: relative;
              bottom: -4px;

              mat-icon {
                color: rgba(0, 0, 0, .54);
                margin-top: -2px;
                height: 20px;
              }
            }

            button {
              min-width: 82px;
            }

            .cancel-button {
              margin-right: 8px;
            }
          }
        }

        .deadline-error-container {
          margin-top: -15px;

          mat-error {
            font-size: 75%;
          }
        }
      }
    }
  }
}
