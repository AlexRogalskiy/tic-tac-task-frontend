.error-container {
  background-color: #ffffff;
  box-shadow: 10px 5px 3px #cecece;
  border-radius: 4px;
  text-transform: uppercase;
  padding: 0 16px 16px 16px;

  .error-code {
    display: flex;
    flex-direction: row;
    justify-content: center;

    h1 {
      margin: 0;
      font-size: 250px;
      font-weight: 900;
      color: transparent;
      background-color: #cecece;
      background-clip: text;
      text-shadow: 10px 5px 3px rgba(255, 255, 255, 0.8);
    }
  }

  .error-text {
    display: flex;
    flex-direction: column;

    h2 {
      font-size: 40px;
      font-weight: 900;
      margin: 0;
    }

    p {
      font-size: 16px;
      font-weight: 400;
      margin-top: 16px;
    }
  }

  .button-container {
    display: flex;
  }
}
