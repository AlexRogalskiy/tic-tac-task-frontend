.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;

  header {
    .space-filler {
      flex: 1 1 auto;
    }

    .profile-info-container {
      display: flex;
      flex-direction: row;
      align-items: center;
      font-size: 16px;

      img.avatar {
        border-radius: 50%;
        width: 40px;
        height: 40px;
      }

      button {
        padding-left: 8px;
        padding-right: 8px;
      }
    }
  }

  mat-sidenav-container {
    display: flex;
    flex-direction: column;
    flex: 1;

    mat-sidenav {
      min-width: 272px;
    }

    mat-sidenav-content {
      display: flex;
      flex-direction: column;
      flex: 1;

      main {
        flex: 1;
        padding-top: 16px;

        > *:not(router-outlet) {
          display: block;
          flex: 1;
        }
      }

      footer {
        margin-top: auto;
        padding: 1rem 16px 1rem 16px;

        .language-switcher {
          display: flex;
          width: 100%;
          align-items: center;
          justify-content: flex-end;

          a {
            min-width: 32px;
          }
        }
      }
    }
  }
}
