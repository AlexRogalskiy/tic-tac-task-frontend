.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;

  header {
    .space-filler {
      flex: 1 1 auto;
    }

    .profile-info-container {
      display: flex;
      flex-direction: row;
      align-items: center;
      font-size: 16px;

      img.avatar {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        margin-right: 8px;
      }
    }
  }

  mat-sidenav-container {
    display: flex;
    flex-direction: column;
    flex: 1;

    mat-sidenav {
      min-width: 272px;

      .mat-nav-list {
        .mat-date-icon {
          position: relative;

          span {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            margin-top: 2px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-family: Roboto, 'Helvetica Neue', sans-serif;
            font-size: 13px;
            font-weight: bold;
          }
        }

        .mat-list-item-selected {
          background: rgba(0, 0, 0, .12);
        }
      }
    }

    mat-sidenav-content {
      display: flex;
      flex-direction: column;
      flex: 1;

      main {
        flex: 1;
        padding-top: 16px;

        > *:not(router-outlet) {
          display: block;
          flex: 1;
        }
      }

      footer {
        margin-top: auto;
        padding: 1rem 16px 1rem 16px;

        .language-switcher {
          display: flex;
          width: 100%;
          align-items: center;
          justify-content: flex-end;

          a {
            min-width: 32px;
          }
        }
      }
    }
  }
}
