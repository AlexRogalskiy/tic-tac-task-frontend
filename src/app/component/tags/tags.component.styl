.tag-list-row {
  justify-content: space-between;
  min-height: 40px;

  .tag-form {
    width: 100%;
    display: flex;
    flex-direction: column;

    mat-form-field {
      width: 100%;
    }

    .form-buttons {
      display: flex;
      flex-direction: row;
      justify-content: center;

      button:last-child {
        margin-right: 0;
      }
    }
  }

  .name-column {
    display: flex;
    align-items: center;

    span {
      width: 149px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }

  .menu-trigger-column {
    margin-left: auto;
  }
}

.non-selectable-list-item {
  background-color: white !important;
  cursor: default !important;
}
