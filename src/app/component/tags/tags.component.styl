.tag-list-row {
  .tag-form {
    width: 100%;
    display: flex;
    flex-direction: column;

    mat-form-field {
      width: 100%;
    }

    .form-buttons {
      display: flex;
      flex-direction: row;
      justify-content: center;

      button:last-child {
        margin-right: 0;
      }
    }
  }

  .name-column {
    display: flex;
    align-items: center;

    span {
      width: 157px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }
}
